package com.recursiveflow.rainbows.view {    import flash.display.Sprite;        import com.recursiveflow.shared.view.button.CommandButton;        /**     * Groups a series of buttons into an evenly spaced layout.     *      * @author Alastair Dant     */    public class ButtonPanel extends Sprite     {        public static const PADDING : Number = 15;        private var buttons : Array;        public function ButtonPanel()        {        	this.buttons = [];        }                public function add(button : CommandButton) : void        {            this.addChild(button.getSource());            this.buttons.push(button);                        button.getSource().x = buttons.length * ((button.getSource().width / 2) + PADDING);                    }    }}