package com.recursiveflow.rainbows.view {    import flash.display.Shape;    import flash.geom.Point;                    /**     * A single, round shape of arbitrary size and colour that can be used to build up more complicated display patterns.     *      * @author Alastair Dant     */    public class Particle extends Shape     {        public var radius : Number;        public function Particle(r:Number, c:Number = 0xFF0000, a:Number = 1)        {        	this.radius = r;        	        	graphics.beginFill(c, a);        	graphics.drawCircle(0,0,r);//-r/2, -r/2, r);        	graphics.endFill();        }                public function distanceTo(c:Shape):Number        {        	return Point.distance(new Point(x,y), new Point(c.x,c.y));	        }    }}