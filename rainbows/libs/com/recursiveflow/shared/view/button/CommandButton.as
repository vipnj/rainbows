package com.recursiveflow.shared.view.button {    import flash.display.Sprite;    import flash.events.MouseEvent;        import com.recursiveflow.shared.view.button.SimplerButton;        import com.recursiveflow.shared.controller.Command;        /**     * Extended version of SimplerButton that fires the specified Command handler when clicked.     *     * @author Alastair Dant     */    public class CommandButton extends SimplerButton     {        private var handler : Command;                public function CommandButton(source : Sprite, handler:Command)        {            super(source);                        this.handler = handler;        }                        protected override function handleClick(event:MouseEvent):void        {        	super.handleClick(event);        	        	handler.execute(event);        }    }}