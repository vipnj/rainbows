package com.recursiveflow.rainbows.view {    import flash.filters.GlowFilter;        import flash.filters.BevelFilter;        import flash.text.TextFieldAutoSize;        import flash.text.TextFormatAlign;            import flash.display.Sprite;    import flash.text.TextField;    import flash.text.TextFormat;        import com.recursiveflow.rainbows.view.Particle;            /**     * Overlays a single character of dynamic text on top of a round shape coloured as specified.     *      * @author Alastair Dant     */    public class LetterBall extends Sprite     {        private static const FORMAT : TextFormat = new TextFormat("Impact", 12, 0xFFFFFF, true, false, false, null, null, TextFormatAlign.LEFT);                private var ball : Particle;        private var textField : TextField;        public function LetterBall(letter : String, colour : Number = 0xFF0000)        {            this.ball = new Particle(12,colour);                        this.textField = new TextField();                        this.textField.autoSize = TextFieldAutoSize.CENTER;            this.textField.text = letter;            this.textField.setTextFormat(FORMAT);            this.textField.selectable = false;                                    addChild(ball);            addChild(textField);                                   textField.x = textField.width * -0.5;            textField.y = textField.height * -0.5;                        filters = [new BevelFilter(1,45,0xFFFFFF,0.3,0,0.3,6,6)];            textField.filters = [new GlowFilter(0x000000,0.1)];                        cacheAsBitmap = true;        }    }}